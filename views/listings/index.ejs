
<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        overflow-x: auto !important;
        max-width: 100dvw !important;
        box-shadow: 0 0 10px #eaeaea;
        border-radius: 5rem;
        padding: 0.5rem 2rem;
        display: flex;
       align-items: center;
    }
    #filters::-webkit-scrollbar {
        display: none;
    }
    .filter{
        opacity: 0.6;
        text-align: center;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
</style>
    <body>
       
        <!-- <h1 class="mt-3">All listings</h1> -->
         <div id="filters" class="mt-4">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>

            <div class="filter ms-3">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>

            <div class="filter ms-3">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>

            <div class="filter ms-3">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </div>

            <div class="filter ms-3">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>

            <div class="filter ms-3">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </div>

            <div class="filter ms-3">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>

            <div class="filter ms-3">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>

            <div class="filter ms-3">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>


         </div>
        <div class="row row-cols-1 row-cols-md-3 mt-3 row-cols-lg-4">
            <% for (let listing of allListings){%>
                <a href="/listings/<%= listing._id  %>">
                    <div class="card">
                        <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing Image" style='height:20rem;''>
                        <div class="card-body">
                        <p class="card-text"><b> <%= listing.title %> </b> <br> &#8377;<%= listing.price.toLocaleString('en-IN')%> / night</p>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>

    </body>
