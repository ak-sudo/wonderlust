<% layout("/layouts/boilerplate") %>
    <body>

        <div class="row">
            <div class="col-8 offset-2">
                <h3 class="mt-3 mb-3">Edit Your listing</h3>
                <form method="post" action="/listings/<%= listingData._id %>?_method=PUT" class="needs-validation" enctype="multipart/form-data" novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="Title" required value='<%= listingData.title %>' class="form-control">
                        <div class="invalid-feedback">Title field cannot be empty!</div>
                    </div>
        
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" name="listing[description]" placeholder="Description" rows="10" cols="50" required class="form-control"><%= listingData.description%></textarea>
                        <div class="invalid-feedback">Please enter a short description about the location!</div>

                    </div>
        
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input type="file" name="listing[image]" class="form-control">

                    </div>
        
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" placeholder="Price" class="form-control" required value='<%= listingData.price %>'>
                        <div class="invalid-feedback">Price field cannot be empty!</div>

                    </div>
        
                    <div class="mb-3">
                        <label for="country class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="Country" class="form-control" required value='<%= listingData.country %>'>
                        <div class="invalid-feedback">Please enter a valid country name!</div>

                    </div>
        
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" placeholder="Location" class="form-control" required value='<%= listingData.location %>'>
                        <div class="invalid-feedback">Please enter a valid location!</div>

                    </div>
        
                    <button class="btn btn-dark edit-btn">Update Changes</button>
                </form>
            </div>
        </div>

    </body>